generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/* ================= USER ================= */

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  avatarUrl String?

  scans     Scan[]
  learning  LearningActivity[]
  reports Report[]
  mediaScans MediaScan[]

}

/* ================= SCAN ================= */

model Scan {
  id        String   @id @default(uuid())
  url       String

  riskLevel String   @default("Suspicious")
  summary   String   @default("")
  details   String[] @default([])
  likesCount Int     @default(0)

  createdAt DateTime @default(now())

  userId    String?
  user      User? @relation(fields: [userId], references: [id])
  reports Report[]

  @@index([createdAt])
}


model LearningActivity {
  id        String   @id @default(uuid())
  title     String
  category  String
  createdAt DateTime @default(now())
  likesCount Int     @default(0)

  userId    String
  user      User    @relation(fields: [userId], references: [id])
  reports Report[]

  @@index([createdAt])
}

model Report {
  id        String   @id @default(uuid())

  type      String   // "REPORT" | "COMMENT"
  reason    String?
  message   String?
  likesCount Int     @default(0)

  createdAt DateTime @default(now())

  // ---- Relations ----


  userId    String?
  user      User? @relation(fields: [userId], references: [id])

  scanId    String?
  scan      Scan? @relation(fields: [scanId], references: [id])

  learningId String?
  learning   LearningActivity? @relation(fields: [learningId], references: [id])

  // ðŸ”¹ MediaScan relation (deepfake / media)
  mediaScanId String?
  mediaScan   MediaScan? @relation(fields: [mediaScanId], references: [id])

  @@index([createdAt])
}



model ScamBrief {
  id          String   @id @default(cuid())
  title       String
  summary     String
  howItWorks  String
  staySafe    String
  riskLevel   String
  scamType    String
  createdAt  DateTime @default(now())
}

//for upcoming feature of detecting deepfakes
model MediaScan {
  id          String   @id @default(uuid())
  likesCount Int     @default(0)

  // ðŸ”¹ Media info
  mediaType   String   // IMAGE | VIDEO
  mediaUrl    String   // stored file path or cloud URL
  thumbnail   String?  // optional preview frame

  // ðŸ”¹ Detection result
  verdict     String   // REAL | AI_GENERATED | SUSPICIOUS
  confidence  Float    // 0.0 â†’ 1.0

  summary     String
  signals     String[] // detected indicators

  // ðŸ”¹ Metadata
  frameCount  Int?     // only for video
  modelUsed   String?  // e.g. "XceptionNet", "Sensity"

  createdAt   DateTime @default(now())

  // ðŸ”¹ Ownership
  userId String?
  user   User? @relation(fields: [userId], references: [id])

  // ðŸ”¹ Community
  reports Report[]
}


